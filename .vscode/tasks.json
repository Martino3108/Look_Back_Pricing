{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build project (C++20 + OpenMP)",
      "type": "shell",
      "command": "/bin/zsh",
      "args": [
        "-lc",
        "cd \"${workspaceFolder}\" && /opt/homebrew/opt/llvm/bin/clang++ -std=c++20 -g *.cpp -o main -Xpreprocessor -fopenmp -I/opt/homebrew/opt/libomp/include -L/opt/homebrew/opt/libomp/lib -lomp && ls -lah main"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
